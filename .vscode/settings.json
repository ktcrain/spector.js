// Place your settings in this file to overwrite default and user settings.
{
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "npm-debug.log.*": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/.vs": true,        
        "**/.tempChromeProfileForDebug": true,
        "**/node_modules": true,
        "**/temp": true,
        "**/.temp": true,
        "**/built": true,
        "**/.built": true,
        "**/*.d.ts": true,
        "**/*.js.map": true,
        "**/*.js.fx": true,
        "**/*.js": { 
            "when":"$(basename).ts"
        }
    },
    "files.associations": {
        "*.fx": "glsl"
    },
    "search.exclude": {
        "npm-debug.log": true,
        "npm-debug.log.*": true,
        "**/babylon.js": true,
        "**/spector.bundle.js": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.vs": true,
        "**/.tempChromeProfileForDebug": true,
        "**/.temp": true,
        "**/dist": true,
        "**/built": true,
        "**/*.map": true,
        "**/*.svg": true,
        "**/*.js": { 
             "when":"$(basename).ts"
         },
        "**/*.d.ts": true
    },
    "[typescript]": {
        "files.insertFinalNewline": true,
        "editor.formatOnSave": true,
        "editor.trimAutoWhitespace": true,
        "files.trimTrailingWhitespace": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": false
    }
}